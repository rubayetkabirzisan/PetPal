{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@screens/*": ["./screens/*"],
      "@assets/*": ["./assets/*"],
      "@lib/*": ["./lib/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "types/**/*.d.ts"
  ]
}